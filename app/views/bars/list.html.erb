<h1>Bars</h1>

<table class="ui table" style="overflow-y:scroll;">
  <thead>
    <tr>
     <th>Bar</th>
      <th>Address</th>
      <th>City</th>
      <th>Phone Number</th>
      <th>Team(s)</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @bars.reverse.each do |bar| %>
      <tr>
        <td><%= bar.name%></td>
        <td><%= bar.address%></td>
        <td><%= bar.city%></td>
        <td><%= number_to_phone(bar.phone, area_code:true)%></td>
        <td><%= bar.teams.pluck(:name).join(",  ")%></td>
        <td><%= link_to "Delete", bar_path(bar), method: :delete, data: {confirm: "Are you sure you want to delete this bar?"}%></td>
        <!-- <td>bar.address</td>
        <td>bar.city</td>
        <td>bar.phone</td>
        <td></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
